{
  "name": "holds-nodejs",
  "version": "1.0.0",
  "description": "Holds POC in Nodejs",
  "main": "server.js",
  "scripts": {
    "pretest": "NODE_ENV=test sequelize db:migrate",
    "test": "jest --forceExit",
    "tsc": "tsc",
    "prod": "tsc && node ./build/server.js",
    "babel-node": "babel-node --presets=env",
    "dev": "nodemon --exec babel-node server.js",
    "start": "pm2 start --interpreter babel-node server.js --watch"
  },
  "scriptsComments": {
    "dev": "Runs nodemon transpiled with babel. Use `npm run-script dev to run this` script",
    "start": "Runs a pm2 of the server. use `pm2 stop <processIndex> to stop the server`",
    "test": "Runs the jest test suite"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/WeConnect/holds-nodejs.git"
  },
  "author": "Or Keren",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/WeConnect/holds-nodejs/issues"
  },
  "homepage": "https://github.com/WeConnect/holds-nodejs#readme",
  "dependencies": {
    "amqplib": "^0.5.5",
    "apollo-server": "^2.9.16",
    "apollo-server-express": "^2.14.2",
    "bluebird": "^3.7.2",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "graphql": "^14.5.8",
    "graphql-relay": "^0.6.0",
    "graphql-sequelize": "^9.4.0",
    "le_node": "^1.8.0",
    "pg": "^7.17.1",
    "pg-hstore": "^2.3.3",
    "pm2": "^3.5.2",
    "rabbit.js": "^0.4.4",
    "rollbar": "^2.14.4",
    "sequelize": "^5.21.3",
    "sequelize-cli": "^5.5.1",
    "umzug": "^2.2.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.3",
    "@babel/core": "^7.8.3",
    "@babel/node": "^7.8.3",
    "@babel/polyfill": "^7.8.3",
    "@babel/preset-env": "^7.8.3",
    "@babel/register": "^7.8.3",
    "apollo-server-testing": "^2.9.16",
    "babel-jest": "^24.9.0",
    "jest": "^24.9.0",
    "nodemon": "^1.19.4"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/__utils"
    ]
  }
}
